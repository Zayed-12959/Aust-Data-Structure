#include<bits/stdc++.h>
using namespace std;

int main(){

    int n,x;
    cout << "Print number of elements: " << endl;
    cin >> n;

    vector<int> arr;
    cout << "Enter array elements: " << endl;
    for(int i=0; i<n; i++){
        cin >> x;
        arr.push_back(x);
    }

    int comparison = 0;
    int swaps = 0;

    int numberOfSwaps;
    cout << "enter number of swaps allowed : " << endl;
    cin >> numberOfSwaps;

    for(int i=0; i<=n-2; i++){
        int minindex = i;

        for(int j=i+1; j<=n-1; j++){
            if(arr[j] < arr[minindex] && arr[j] >= 0 && arr[j]%2 == 0){ //TASK (3) sort only positive values // TASK(4)sort only positive indices(j%2==0)
                minindex = j;
            }
            comparison ++;
        }
        if(minindex != i){
            if(swaps < numberOfSwaps){ //TASK(2) sort allowed times
                swap(arr[i], arr[minindex]);
                swaps++;
            }
        }
    }

    cout << "Sorted array" << endl;
    for(int i=0; i<n; i++){
        cout << arr[i] << " ";
    }
    cout << endl;
    cout << "comparison" << endl;
    cout << comparison << endl;
    cout << "swaps" << endl;
    cout << swaps << endl;

    return 0;
}

//TASK (5) Find the k-th smallest element using selection sort concepts without sorting the whole array
//TASK (6) Sort rows of a matrix based on the first elements

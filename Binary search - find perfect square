#include <iostream>
using namespace std;

bool isPerfectSquare(int num) {
    // 1 is a perfect square
    if (num == 1) return true;

    // Use long long to prevent overflow during 'mid * mid'
    long long low = 1;
    long long high = num / 2; // Optimization: sqrt(x) is always <= x/2 for x > 1

    while (low <= high) {
        long long mid = low + (high - low) / 2;
        long long squared = mid * mid;

        if (squared == num) {
            return true; // Found it!
        } 
        else if (squared > num) {
            high = mid - 1; // Look in the lower half
        } 
        else {
            low = mid + 1;  // Look in the upper half
        }
    }

    return false;
}

int main() {
    int input = 16;
    if (isPerfectSquare(input)) {
        cout << input << " is a perfect square." << endl;
    } else {
        cout << input << " is NOT a perfect square." << endl;
    }
    return 0;
}

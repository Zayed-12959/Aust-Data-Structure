#include <iostream>
#include <vector>

using namespace std;

int countInsertionShifts(vector<int>& arr) {
    int n = arr.size();
    int totalShifts = 0;

    for (int i = 1; i < n; i++) {
        int key = arr[i];
        int j = i - 1;

        // The while loop runs every time an element needs to shift right
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j]; // Shifting arr[j] to the right
            j--;
            totalShifts++;    // Increment the counter for every shift
        }
        
        arr[j + 1] = key;
    }
    
    return totalShifts;
}

int main() {
    vector<int> arr = {4, 3, 2, 1};

    cout << "Original Array: ";
    for(int x : arr) cout << x << " ";
    cout << endl;

    int shifts = countInsertionShifts(arr);

    cout << "Sorted Array:   ";
    for(int x : arr) cout << x << " ";
    cout << endl;

    cout << "Total number of shifts: " << shifts << endl;

    return 0;
}

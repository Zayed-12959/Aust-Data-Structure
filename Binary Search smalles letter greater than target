Smallest Letter Greater Than Target

#include <bits/stdc++.h>
using namespace std;

char nextGreatestLetter(vector<char>& letters, char target) {
    int low = 0;
    int high = letters.size() - 1;

    // Standard Binary Search
    while (low <= high) {
        int mid = low + (high - low) / 2;

        if (letters[mid] > target) {
            // This letter is greater, but maybe there is a smaller one to the left?
            high = mid - 1;
        } else {
            // This letter is too small (or equal). Look to the right.
            low = mid + 1;
        }
    }

    // --- SIMPLER LOGIC HERE ---

    // If 'low' went past the end of the array, it means
    // no letter was strictly greater than the target.
    if (low == letters.size()) {
        return letters[0]; // Wrap around to the start
    } else {
        return letters[low]; // Return the valid letter we found
    }
}

int main() {
    int n;
    cout << "Enter number of letters: ";
    cin >> n;

    vector<char> letters(n);
    cout << "Enter sorted letters: ";
    for(int i = 0; i < n; i++) cin >> letters[i];

    char target;
    cout << "Enter target: ";
    cin >> target;

    char result = nextGreatestLetter(letters, target);
    cout << "Smallest letter strictly greater than '" << target << "' is: " << result << endl;

    return 0;
}


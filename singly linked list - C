#include <stdio.h>
#include <stdlib.h>

struct node{
    int data;
    struct node *next;
};

struct node* header = NULL;

void printList(){
    struct node *curr = header;
    while(curr!=NULL){
        printf("%d ", curr->data);
        curr = curr->next;
    }
}

void insertFirst(int val){
    struct node* temp;
    temp = (struct node *) malloc(sizeof(struct node));
    temp->data = val;

    if(header==NULL){
        header = temp;
        header->next = NULL;
        return;
    }

    temp->next = header;
    header = temp;
}

void insertEnd(int val){
    struct node *temp;
    temp = (struct node*) malloc(sizeof(struct node));
    temp->data = val;

    if(header==NULL){
        insertFirst(val);
        return;
    }

    struct node *curr = header;
    while(curr->next!=NULL){
        curr = curr->next;
    }
    temp->next = NULL;
    curr->next = temp;
}

void deleteBegin(){
    struct node *temp;
    if(header==NULL){
        printf("List is empty");
        return;
    }

    temp = header;
    header = header->next;
    free(temp);
}

void deleteLast(){
    if(header==NULL){
        deleteBegin();
        return;
    }
    else{
        struct node *curr = header;
        struct node *prev = NULL;
        while(curr->next!=NULL){
            prev  = curr;
            curr = curr->next;
        }
        prev->next = NULL;
        free(curr);

    }
}

void insertAtPos(int val, int pos){
    struct node *temp;
    temp = (struct node *) malloc(sizeof(struct node));
    temp->data = val;
    struct node *curr = header;
    struct node *prev = NULL;

    if(pos==0){
        insertFirst(val);
        return;
    }

    for(int i=0; i<pos; i++){
        if(curr==NULL){
            printf("Invalid position");
            free(temp);
            return;
        }
        prev = curr;
        curr = curr->next;
    }

    temp->next = curr;
    prev->next = temp;
}

void deleteAtPos(int pos){
    struct node *curr = header;
    struct node *prev = NULL;

    if(pos==0){
        deleteBegin();
        return;
    }

    for(int i=0; i<pos; i++){
        if(curr==NULL){
            printf("Invalid position");
            return;
        }
        prev = curr;
        curr = curr->next;
    }

    prev->next = curr->next;
    free(curr);
}

void sortedInsert(int val){
    struct node *temp;
    temp = (struct node *) malloc(sizeof(struct node));
    temp->data = val;
    struct node *curr = header;
    struct node *prev = NULL;

    if(header==NULL){
        header = temp;
        return;
    }

    while(curr!=NULL && curr->data < val){
        prev = curr;
        curr = curr->next;
    }

    if(prev == NULL){
        temp->next = header;
        header = temp;
    }

    else{
        temp->next = curr;
        prev->next = temp;
    }
}


int main() {
    insertFirst(30);
    insertFirst(20);
    insertFirst(10);
    insertEnd(40);
    insertEnd(60);
    insertAtPos(50, 4);
    deleteBegin();
    deleteLast();
    deleteAtPos(2);
    sortedInsert(25);
    sortedInsert(10);
    sortedInsert(60);


    printList();

    return 0;
}

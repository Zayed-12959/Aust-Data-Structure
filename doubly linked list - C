#include <stdio.h>
#include <stdlib.h>

struct node{
    int data;
    struct node *next;
    struct node *prev;
};

struct node* header = NULL;

void printList(){
    struct node *curr = header;
    while(curr!=NULL){
        printf("%d ", curr->data);
        curr = curr->next;
    }
}

void insertFirst(int val){
    struct node* temp;
    temp = (struct node *) malloc(sizeof(struct node));
    temp->data = val;

    if(header==NULL){
        temp->prev = NULL;
        temp->next = NULL;
        header = temp;
        return;
    }
    temp->next = header;
    temp->prev = NULL;
    header->prev = temp;
    header = temp;
}

void insertEnd(int val){
    struct node *temp;
    temp = (struct node*) malloc(sizeof(struct node));
    temp->data = val;

    if(header==NULL){
        insertFirst(val);
        return;
    }

    struct node *curr = header;
    while(curr->next!=NULL){
        curr = curr->next;
    }
    temp->next = NULL;
    temp->prev = curr;
    curr->next = temp;
}

void deleteBegin(){
    struct node *temp;
    if(header==NULL){
        printf("List is empty");
        return;
    }

    temp = header;
    header = header->next;
    if(header!=NULL){
        header->prev = NULL;
    }

    free(temp);
}

void deleteLast(){
    if(header==NULL){
        printf("List is empty");
        return;
    }
    else if(header->next == NULL){
        free(header);
        header = NULL;
        return;
    }
    else{
        struct node *curr = header;
        while(curr->next!=NULL){
            curr = curr->next;
        }
        curr->prev->next = NULL;
        free(curr);

    }
}

void insertAtPos(int val, int pos){
    struct node *temp;
    temp = (struct node *) malloc(sizeof(struct node));
    temp->data = val;
    struct node *curr = header;

    if(pos==0){
        insertFirst(val);
        return;
    }

    for(int i=0; i<pos; i++){
        if(curr==NULL){
            printf("Invalid position");
            free(temp);
            return;
        }
        curr = curr->next;
    }

    temp->next = curr;
    temp->prev = curr->prev;
    curr->prev->next = temp;
    curr->prev = temp;
}

void deleteAtPos(int pos){
    struct node *curr = header;

    if(pos==0){
        deleteBegin();
        return;
    }

    for(int i=0; i<pos; i++){
        if(curr==NULL){
            printf("Invalid position");
            return;
        }
        curr = curr->next;
    }

    curr->prev->next = curr->next;
    if(curr->next!=NULL){
        curr->next->prev = curr->prev;
    }

    free(curr);
}

void sortedInsert(int val){
    struct node *temp;
    temp = (struct node *) malloc(sizeof(struct node));
    temp->data = val;
    temp->next = NULL;
    temp->prev = NULL;

    struct node *curr = header;

    if(header==NULL){
        header = temp;
        return;
    }

    if(val <= header->data){
        temp->next = header;
        header->prev = temp;
        header = temp;
        return;
    }

    while(curr->next != NULL && curr->next->data < val){
        curr = curr->next;
    }

    temp->next = curr->next;
    temp->prev = curr;
    if(curr->next!=NULL){
        curr->next->prev = temp;
    }
    curr->next = temp;
}


int main() {
    insertFirst(30);
    insertFirst(20);
    insertFirst(10);
    insertEnd(40);
    insertEnd(60);
    insertAtPos(50, 4);
    deleteBegin();
    deleteLast();
    deleteAtPos(2);
    sortedInsert(25);
    sortedInsert(10);
    sortedInsert(60);


    printList();

    return 0;
}
